<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:localvm="clr-namespace:MprIsocurveGeneration.ViewModels"             
                    xmlns:local="clr-namespace:MprIsocurveGeneration.Views">

    <Style x:Key="SidebarControlBorder" TargetType="Border">
        <Setter Property="BorderBrush" Value="Orchid" />
        <Setter Property="BorderThickness" Value="3" />
        <Setter Property="Background" Value="DarkBlue" />
        <Setter Property="Margin" Value="3" />
    </Style>

    <Style x:Key="ViewBorder" TargetType="Border">
        <Setter Property="BorderBrush" Value="Orchid" />
        <Setter Property="BorderThickness" Value="3" />
        <Setter Property="Background" Value="DarkBlue" />
        <Setter Property="Margin" Value="3" />
    </Style>
    
    <DataTemplate DataType="{x:Type localvm:LayeredViewViewModel}">
        <local:LayeredViewView />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type localvm:PresentationStateViewModel}">
        <local:PresentationStateView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type localvm:MprImageViewModel}">
        <local:MprImageView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type localvm:IsocurveViewModel}">
        <local:IsocurveView />
    </DataTemplate>

</ResourceDictionary>